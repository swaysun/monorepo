{
  "name": "monorepo",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/swaysun/monorepo.git",
  "author": "liufeng <lfeng18@grgbanking.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "yarn workspaces run clean",
    "cm": "git-cz",
    "bv": "lerna version --conventional-commits",
    "pu": "lerna publish from-git",
    "build": "lerna run build",
    "build:utils": "cd ./packages/utils && yarn run rollup -c",
    "build:components": "cd ./packages/components && yarn clean && yarn build:file && webpack --config build/webpack.conf.js && webpack --config build/webpack.common.js && webpack --config build/webpack.component.js",
    "build:components:conf": "cd ./packages/components && yarn build:file && webpack --config build/webpack.conf.js",
    "build:components:file": "cd ./packages/components && node build/bin/build-entry.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "husky": "^4.3.6",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "2.2.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@grg/utils": "^0.0.11"
  }
}
